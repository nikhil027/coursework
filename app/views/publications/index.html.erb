<h2>Listing Publications</h2>

<%= link_to "Add Publication", new_publication_path%>

<ol>
	<%@publications.each do |publication|%>
		<li><%=link_to publication.title, "#{publication.link}",target:"_blank"%> by <%=publication.instructor.name%>
			<%=link_to "Edit", edit_publication_path(publication.id)%>
			<%=link_to "Destroy", publication_path(publication.id), method: :delete, data: {confirm: "Are you sure ???"}%>
		</li>
	<%end%>

</ol>